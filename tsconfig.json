{
  "compilerOptions": {
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": false,
    "paths": {
      "svr/*": ["server/src/*"],
      "tps/*": ["typings/*"],
      "nxt/*": ["next/*"]
    }
  }
}
